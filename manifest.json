
{
  "manifest_version": 3,
  "name": "Chess Emotes UI",
  "description": "Send emotes and confetti on chess.com",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "emotes/emote1.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
