
{
  "manifest_version": 3,
  "name": "Chessmotes HUD + Chat",
  "description": "Emotes and in-game chat for chess.com",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
